<?xml version="1.0" encoding="UTF-8"?>
<archetype-descriptor xsi:schemaLocation="http://maven.apache.org/plugins/maven-archetype-plugin/archetype-descriptor/1.0.0 http://maven.apache.org/xsd/archetype-descriptor-1.0.0.xsd" name="pipedev-workflow"
                      xmlns="http://maven.apache.org/plugins/maven-archetype-plugin/archetype-descriptor/1.0.0"
                      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
    <requiredProperties>
        <requiredProperty key="groupId">
            <defaultValue>ca.on.oicr.pde.workflows</defaultValue>
        </requiredProperty>
        <requiredProperty key="version">
            <defaultValue>1.0</defaultValue>
        </requiredProperty>
        <requiredProperty key="package">
            <defaultValue>${groupId}</defaultValue>
        </requiredProperty>
        <requiredProperty key="workflow-name-lower-case"/>
        <requiredProperty key="artifactId">
            <defaultValue>workflow-${workflow-name-lower-case}</defaultValue>
        </requiredProperty>
        <requiredProperty key="workflow-name-camel-case"/>
        <requiredProperty key="realArtifactId">
            <defaultValue>${workflow-name-camel-case}</defaultValue>
        </requiredProperty>
    </requiredProperties>
    <fileSets>
        <fileSet filtered="false" encoding="UTF-8">
            <directory>workflow/bin</directory>
            <includes>
                <include>**/*</include>
            </includes>
        </fileSet>
        <fileSet filtered="false" encoding="UTF-8">
            <directory>links</directory>
            <includes>
                <include>**/*</include>
            </includes>
        </fileSet>
        <fileSet filtered="true" encoding="UTF-8">
            <directory>workflow</directory>
            <includes>
                <include>**/*.xml</include>
            </includes>
        </fileSet>
        <fileSet filtered="true" encoding="UTF-8">
            <directory>workflow/config</directory>
            <includes>
                <include>**/*.ini</include>
            </includes>
        </fileSet>
        <fileSet encoding="UTF-8">
            <directory>workflow/lib</directory>
            <includes>
                <!--required for git + empty directories-->
                <include>.directory</include>
                <include>**/*.jar</include>
            </includes>
        </fileSet>
        <fileSet filtered="true" encoding="UTF-8">
            <directory></directory>
            <includes>
                <include>*.properties</include>
            </includes>
        </fileSet>
        <fileSet filtered="true" packaged="true" encoding="UTF-8">
            <directory>src/main/java</directory>
            <includes>
                <include>**/*</include>
            </includes>
        </fileSet>
        <fileSet filtered="true" packaged="true" encoding="UTF-8">
            <directory>src/test/java</directory>
            <includes>
                <include>**/*</include>
            </includes>
        </fileSet>
        <fileSet filtered="true" packaged="false" encoding="UTF-8">
            <directory>src/test/resources</directory>
            <includes>
                <include>**/*</include>
            </includes>
        </fileSet>
    </fileSets>
</archetype-descriptor>
