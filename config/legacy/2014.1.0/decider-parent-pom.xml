<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    
    <modelVersion>4.0.0</modelVersion>
    
    <parent>
        <groupId>ca.on.oicr.pde</groupId>
        <artifactId>common</artifactId>
        <version>2014.1.0</version>
        <relativePath>common-parent-pom.xml</relativePath>
    </parent>
    
    <groupId>ca.on.oicr.pde.deciders</groupId>
    <artifactId>deciders</artifactId>
    <version>2014.1.0</version>
    <packaging>pom</packaging>
    <url>http://maven.apache.org</url>

    <properties>
        <final-name>Decider_${project.version}_${project.artifactId}_${workflow-version}_SeqWare_${seqware-version}</final-name>
        <final-jar-location>/.mounts/labs/PDE/jenkins/deciders</final-jar-location>
        <seqwareDistribution>${project.build.directory}/dependency/seqware-distribution-${seqware-version}-full.jar</seqwareDistribution>
    </properties>
            
    <dependencies>
        <dependency>
            <groupId>com.github.seqware</groupId>
            <artifactId>seqware-distribution</artifactId>
            <version>${seqware-version}</version>
            <classifier>full</classifier>
        </dependency>
        <dependency>
            <groupId>ca.on.oicr.pde</groupId>
            <artifactId>decider-utilities</artifactId>
            <version>${decider-utilities-version}</version>
        </dependency>
    </dependencies>
    
    <build>
        <finalName>${final-name}</finalName>
        <resources>
            <resource>
                <directory>src/main/resources</directory>
                <filtering>true</filtering>
            </resource>
        </resources>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <version>2.3.2</version>
                <configuration>
                    <source>1.6</source>
                    <target>1.6</target>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-dependency-plugin</artifactId>
                <version>2.7</version>
                <executions>
                    <execution>
                        <id>copy-dependencies</id>
                        <phase>package</phase>
                        <goals>
                            <goal>copy-dependencies</goal>
                        </goals>
                        <configuration>
                            <includeArtifactIds>seqware-distribution,decider-utilities</includeArtifactIds>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <artifactId>maven-assembly-plugin</artifactId>
                <version>2.4</version>
                <configuration>
                    <archive>
                        <manifest>
                            <mainClass>${main-class}</mainClass>
                        </manifest>
                        <manifestEntries>
                            <Implementation-Version>${seqware-version}</Implementation-Version>
                        </manifestEntries>
                    </archive>
                    <descriptorRefs>
                        <descriptorRef>jar-with-dependencies</descriptorRef>
                    </descriptorRefs>
                </configuration>
                <executions>
                    <execution>
                        <id>make-assembly</id>
                        <phase>package</phase>
                        <goals>
                            <goal>single</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-failsafe-plugin</artifactId>
                <version>2.16</version>
                <configuration>
                    <skip>${skipITs}</skip>
                    <systemPropertyVariables>
                        <deciderJar>${project.build.directory}/${final-name}-jar-with-dependencies.jar</deciderJar>
                        <deciderClass>${main-class}</deciderClass>
                        <deciderName>${project.artifactId}</deciderName>
                        <deciderVersion>${project.version}</deciderVersion>
                        <seqwareDistribution>${seqwareDistribution}</seqwareDistribution>
                        <workingDirectory>${workingDirectory}</workingDirectory>
                        <schedulingSystem>${schedulingSystem}</schedulingSystem>
                        <schedulingHost>${schedulingHost}</schedulingHost>
                    </systemPropertyVariables>
                    <suiteXmlFiles>
                        <suiteXmlFile>${testSuite}</suiteXmlFile>
                    </suiteXmlFiles>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>wagon-maven-plugin</artifactId>
                <version>1.0-beta-5</version>
                <executions>
                    <execution>
                        <id>upload-jar</id>
                        <phase>deploy</phase>
                        <goals>
                            <goal>upload</goal>
                        </goals>
                        <configuration>
                            <fromFile>${project.build.directory}/${final-name}-jar-with-dependencies.jar</fromFile>
                            <url>file://${final-jar-location}</url>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>
    
</project>
